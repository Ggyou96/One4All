#:import get_color_from_hex kivy.utils.get_color_from_hex
BoxLayout:
    orientation: 'vertical'
    canvas.before:
        Color:
            rgba: get_color_from_hex('#181027')  # Solana dark background
        Rectangle:
            pos: self.pos
            size: self.size
    ScreenManager:
        id: screen_manager
        Screen:
            name: 'home'
            BoxLayout:
                orientation: 'vertical'
                padding: 20
                spacing: 20
                canvas.before:
                    Color:
                        rgba: get_color_from_hex('#181027')
                    Rectangle:
                        pos: self.pos
                        size: self.size
                Label:
                    text: 'Solana Blockchain Assistant'
                    font_size: '24sp'
                    color: get_color_from_hex('#9945FF')
                    size_hint_y: None
                    height: 50
                GridLayout:
                    cols: 2
                    spacing: 15
                    padding: 10
                    size_hint_y: None
                    height: 300
                    Button:
                        text: 'SOLKing'
                        background_color: get_color_from_hex('#9945FF')
                        color: 1,1,1,1
                        size_hint_y: None
                        height: 140
                        on_release: 
                            root.ids.screen_manager.current = 'solking'
                    Button:
                        text: 'Position Monitor'
                        background_color: get_color_from_hex('#9945FF')
                        color: 1,1,1,1
                        size_hint_y: None
                        height: 140
                        on_release: 
                            root.ids.screen_manager.current = 'position_monitor'
                    Button:
                        text: 'Bots BigBoss'
                        background_color: get_color_from_hex('#9945FF')
                        color: 1,1,1,1
                        size_hint_y: None
                        height: 140
                        on_release: 
                            root.ids.screen_manager.current = 'botsbigboss'
                    Button:
                        text: 'Wallet Manager'
                        background_color: get_color_from_hex('#9945FF')
                        color: 1,1,1,1
                        size_hint_y: None
                        height: 140
                        on_release: 
                            root.ids.screen_manager.current = 'wallet_manager'
                Image:
                    source: 'skelton_dashboard.png'
                    size_hint_y: None
                    height: 300
                    allow_stretch: True
                    keep_ratio: True
        Screen:
            name: 'solking'
            BoxLayout:
                orientation: 'vertical'
                canvas.before:
                    Color:
                        rgba: get_color_from_hex('#181027')
                    Rectangle:
                        pos: self.pos
                        size: self.size
                Label:
                    text: 'SOLKing Page'
                    color: 1,1,1,1
                Button:
                    text: 'Back to Home'
                    background_color: get_color_from_hex('#9945FF')
                    color: 1,1,1,1
                    size_hint_y: None
                    height: 50
                    on_release: 
                        root.ids.screen_manager.current = 'home'
        Screen:
            name: 'botsbigboss'
            BoxLayout:
                orientation: 'vertical'
                canvas.before:
                    Color:
                        rgba: get_color_from_hex('#181027')
                    Rectangle:
                        pos: self.pos
                        size: self.size
                Label:
                    text: 'Bots BigBoss Page'
                    color: 1,1,1,1
                    font_size: '24sp'
                    size_hint_y: None
                    height: 50
                Button:
                    text: 'Back to Home'
                    background_color: get_color_from_hex('#9945FF')
                    color: 1,1,1,1
                    size_hint_y: None
                    height: 50
                    on_release: 
                        root.ids.screen_manager.current = 'home'
        Screen:
            name: 'position_monitor'
            BoxLayout:
                orientation: 'vertical'
                padding: 20
                spacing: 20
                canvas.before:
                    Color:
                        rgba: get_color_from_hex('#181027')
                    Rectangle:
                        pos: self.pos
                        size: self.size
                Label:
                    text: 'Position Monitoring Dashboard'
                    color: get_color_from_hex('#9945FF')
                    font_size: '24sp'
                    size_hint_y: None
                    height: 50
                GridLayout:
                    cols: 1
                    spacing: 15
                    BoxLayout:
                        orientation: 'vertical'
                        size_hint_y: None
                        height: 200
                        canvas.before:
                            Color:
                                rgba: get_color_from_hex('#232136')
                            RoundedRectangle:
                                pos: self.pos
                                size: self.size
                                radius: [10, 10, 10, 10]
                        Label:
                            text: 'Current Positions'
                            color: 1,1,1,1
                            font_size: '18sp'
                            size_hint_y: None
                            height: 40
                        Label:
                            text: 'No active positions found'
                            color: 0.7,0.7,0.7,1
                    BoxLayout:
                        orientation: 'vertical'
                        size_hint_y: None
                        height: 200
                        canvas.before:
                            Color:
                                rgba: get_color_from_hex('#232136')
                            RoundedRectangle:
                                pos: self.pos
                                size: self.size
                                radius: [10, 10, 10, 10]
                        Label:
                            text: 'Position History'
                            color: 1,1,1,1
                            font_size: '18sp'
                            size_hint_y: None
                            height: 40
                        Label:
                            text: 'No position history available'
                            color: 0.7,0.7,0.7,1
                Button:
                    text: 'Back to Home'
                    background_color: get_color_from_hex('#9945FF')
                    color: 1,1,1,1
                    size_hint_y: None
                    height: 50
                    on_release: 
                        root.ids.screen_manager.current = 'home'
        Screen:
            name: 'wallet_manager'
            BoxLayout:
                orientation: 'vertical'
                padding: 20
                spacing: 20
                canvas.before:
                    Color:
                        rgba: get_color_from_hex('#181027')
                    Rectangle:
                        pos: self.pos
                        size: self.size
                Label:
                    text: 'Wallet Management'
                    color: get_color_from_hex('#9945FF')
                    font_size: '24sp'
                    size_hint_y: None
                    height: 50
                GridLayout:
                    cols: 1
                    spacing: 15
                    BoxLayout:
                        orientation: 'vertical'
                        size_hint_y: None
                        height: 200
                        canvas.before:
                            Color:
                                rgba: get_color_from_hex('#232136')
                            RoundedRectangle:
                                pos: self.pos
                                size: self.size
                                radius: [10, 10, 10, 10]
                        Label:
                            text: 'Connected Wallets'
                            color: 1,1,1,1
                            font_size: '18sp'
                            size_hint_y: None
                            height: 40
                        Label:
                            text: 'No wallets connected'
                            color: 0.7,0.7,0.7,1
                    BoxLayout:
                        orientation: 'horizontal'
                        size_hint_y: None
                        height: 60
                        Button:
                            text: 'Connect Wallet'
                            background_color: get_color_from_hex('#9945FF')
                            color: 1,1,1,1
                        Button:
                            text: 'Import Wallet'
                            background_color: get_color_from_hex('#9945FF')
                            color: 1,1,1,1
                Button:
                    text: 'Back to Home'
                    background_color: get_color_from_hex('#9945FF')
                    color: 1,1,1,1
                    size_hint_y: None
                    height: 50
                    on_release: 
                        root.ids.screen_manager.current = 'home'
        Screen:
            name: 'profile'
            BoxLayout:
                orientation: 'vertical'
                padding: 20
                spacing: 20
                canvas.before:
                    Color:
                        rgba: get_color_from_hex('#181027')
                    Rectangle:
                        pos: self.pos
                        size: self.size
                Image:
                    source: 'skelton_welcome.png'
                    size_hint_y: None
                    height: 300
                    allow_stretch: True
                    keep_ratio: True
                Label:
                    text: 'Profile Page'
                    color: 1,1,1,1
                    font_size: '24sp'
                    size_hint_y: None
                    height: 50
        Screen:
            name: 'settings'
            BoxLayout:
                orientation: 'vertical'
                padding: 20
                spacing: 20
                canvas.before:
                    Color:
                        rgba: get_color_from_hex('#181027')
                    Rectangle:
                        pos: self.pos
                        size: self.size
                Label:
                    text: 'Settings'
                    color: get_color_from_hex('#9945FF')
                    font_size: '24sp'
                    size_hint_y: None
                    height: 50
                GridLayout:
                    cols: 1
                    spacing: 15
                    BoxLayout:
                        orientation: 'vertical'
                        size_hint_y: None
                        height: 200
                        canvas.before:
                            Color:
                                rgba: get_color_from_hex('#232136')
                            RoundedRectangle:
                                pos: self.pos
                                size: self.size
                                radius: [10, 10, 10, 10]
                        Label:
                            text: 'Application Settings'
                            color: 1,1,1,1
                            font_size: '18sp'
                            size_hint_y: None
                            height: 40
                        GridLayout:
                            cols: 2
                            Label:
                                text: 'Dark Mode'
                                color: 1,1,1,1
                                halign: 'left'
                            Switch:
                                active: True
                        GridLayout:
                            cols: 2
                            Label:
                                text: 'Notifications'
                                color: 1,1,1,1
                                halign: 'left'
                            Switch:
                                active: True
                    BoxLayout:
                        orientation: 'vertical'
                        size_hint_y: None
                        height: 200
                        canvas.before:
                            Color:
                                rgba: get_color_from_hex('#232136')
                            RoundedRectangle:
                                pos: self.pos
                                size: self.size
                                radius: [10, 10, 10, 10]
                        Label:
                            text: 'Blockchain Settings'
                            color: 1,1,1,1
                            font_size: '18sp'
                            size_hint_y: None
                            height: 40
                        GridLayout:
                            cols: 2
                            Label:
                                text: 'Network'
                                color: 1,1,1,1
                                halign: 'left'
                            Spinner:
                                text: 'Mainnet'
                                values: ['Mainnet', 'Testnet', 'Devnet']
                                background_color: get_color_from_hex('#9945FF')
                                color: 1,1,1,1
                Button:
                    text: 'Back to Home'
                    background_color: get_color_from_hex('#9945FF')
                    color: 1,1,1,1
                    size_hint_y: None
                    height: 50
                    on_release: 
                        root.ids.screen_manager.current = 'home'
    # Bottom navigation bar
    BoxLayout:
        size_hint_y: 0.08
        orientation: 'horizontal'
        canvas.before:
            Color:
                rgba: get_color_from_hex('#9945FF')  # Solana purple
            Rectangle:
                pos: self.pos
                size: self.size
        Button:
            text: 'Home'
            background_color: 0,0,0,0
            color: 1,1,1,1
            on_release: 
                root.ids.screen_manager.current = 'home'
        Button:
            text: 'Positions'
            background_color: 0,0,0,0
            color: 1,1,1,1
            on_release: 
                root.ids.screen_manager.current = 'position_monitor'
        Button:
            text: 'Wallet'
            background_color: 0,0,0,0
            color: 1,1,1,1
            on_release: 
                root.ids.screen_manager.current = 'wallet_manager'
        Button:
            text: 'Profile'
            background_color: 0,0,0,0
            color: 1,1,1,1
            on_release: 
                root.ids.screen_manager.current = 'profile'
        Button:
            text: 'Settings'
            background_color: 0,0,0,0
            color: 1,1,1,1
            on_release: 
                root.ids.screen_manager.current = 'settings'
